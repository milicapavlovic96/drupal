
<head>
  <link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/jquery.slick/1.3.11/slick.css"/>
</head>

<article{{ attributes }}>
  {{ title_prefix }}
  {% if label and not page %}
    <h2{{ title_attributes }}>
      <a href="{{ url }}" rel="bookmark">{{ label }}</a>
    </h2>
  {% endif %}
  {{ title_suffix }}
  {% if display_submitted %}
    <footer>
      {{ author_picture }}
      <div{{ author_attributes }}>
        {% trans %}Submitted by {{ author_name }} on {{ date }}{% endtrans %}
        {{ metadata }}
      </div>
    </footer>
  {% endif %}
</article>

<body>
  {% for image in content.field_images %}
    {% if image.entity %}
      <img src="{{ file_url(image.entity.uri.value) }}">
    {% endif %}
  {% endfor %}
  <div>{{ content.field_description }}</div>
  <div>{{ content.field_parent }}</div>
  <div>{{ content.field_proje }}</div>
  <div>{{ content.field_tags1 }}</div>

  <div class="slider">

    {% for item in content.field_slider['#items'] %}

      {{ breakpoint('item', item, item.entity) }}
      {{ loop.index }}
      <div class="textcontainer">
        <img src="{{ file_url(item.entity.field_slide_reference.entity.field_image.entity.uri.value) }}"/>
        <div class="title">
          {{ item.entity.field_slide_reference.entity.field_title_slide.value }}
          {{ item.entity.field_slide_reference.entity.field_text_long.value }}
        </div>
      </div>

    {% endfor %}
  </div>

  <script type="text/javascript" src="//code.jquery.com/jquery-1.11.0.min.js"></script>
  <script type="text/javascript" src="//code.jquery.com/jquery-migrate-1.2.1.min.js"></script>
  <script type="text/javascript" src="//cdn.jsdelivr.net/jquery.slick/1.3.11/slick.min.js"></script>

  <script type="text/javascript">
    $(document).ready(function(){
      $('.slider').slick({
        dots: true,
        infinite: true,
        speed: 700,
        autoplay:true,
        autoplaySpeed: 2000,
        arrows:false,
        slidesToShow: 1,
        slidesToScroll: 1
      });
    });
  </script>

</body>
